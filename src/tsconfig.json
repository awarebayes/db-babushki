{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es6", "DOM"],
    "module": "CommonJS",
    "rootDirs": [
      "./"
    ],
    "resolveJsonModule": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}